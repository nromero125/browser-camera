server {
  listen 80 default_server;
  listen [::]:80 default_server ipv6only=on;

  root /app/public;

  index index.html;
  client_max_body_size 100M;

  access_log /var/log/nginx/app.access.log;
  error_log /var/log/nginx/app.error.log;
  
  location / {
    try_files $uri /index.html =404;
  }
}